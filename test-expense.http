<!DOCTYPE html>
<html>
  <body>
    <h2>Test Expense POST</h2>
    <form id="expenseForm">
      <button type="submit">Send Test Expense</button>
    </form>

    <script>
      document.getElementById("expenseForm").addEventListener("submit", async function (e) {
        e.preventDefault();

        const expense = {
          title: "Browser Test",
          amount: 45,
          category: "Health",
          date: "2025-06-09"
        };

        const response = await fetch("http://localhost:3002/api/expenses", {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify(expense)
        });

        const data = await response.json();
        console.log("Response:", data);
        alert("Expense submitted! Check console.");
      });
    </script>
  </body>
</html>
